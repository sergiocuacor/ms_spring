package com.springbootapp.item.clientes;

import java.util.List;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;

import com.springbootapp.item.models.Producto;

@FeignClient(name = "Productos", url="localhost:8001") // Ponemos el nombre del microservicio con el que nos queremos comunicar(fijarnos en su application.properties)
public interface ProductoClienteRest {

	@GetMapping
	public List<Producto> listar();
	
}
